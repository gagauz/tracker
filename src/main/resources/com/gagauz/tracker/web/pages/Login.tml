<html t:type="layout" title="Contact com.gagauz"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter" hideLeftMenu="true">


	<div class="container login-form">

		<t:form t:id="loginForm">
			<h2 class="form-signin-heading">${message:please-login}</h2>
			<t:label for="username" class="sr-only" />
			<t:textfield t:id="username" value="username" class="form-control top"
				placeholder="Email address" validate="required" autofocus="" />
			
			<t:label for="password" class="sr-only"/>
			<t:passwordfield t:id="password" value="password"
				class="form-control bottom" placeholder="Password" />
			
			<div class="checkbox">
				<label for="remember">
					<t:checkbox t:id="remember" value="remember" />
					Remember me
				</label>
			</div>
			<t:submit class="col-sm-3 btn btn-lg btn-primary btn-block" />
		</t:form>
	</div>

</html>
