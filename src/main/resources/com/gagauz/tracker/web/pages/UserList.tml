<html t:type="layout" title="tracker Index"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <p>${message:greeting}</p>

	<t:if test="editUser">
	<p>User</p>
	<div>
		<t:beaneditform t:id="form" object="editUser" exclude="id" add="roles">
			<p:roles>
				<t:label for="roles"></t:label>
				<t:tap.MultiSelect t:id="roles" model="allRoleGroups" value="editUser.roleGroups" size="4" blankLabel="message:select"/>
			</p:roles>
		
		</t:beaneditform>
		<t:eventlink event="reset">${message:reset}</t:eventlink>
	</div>
	<br/>
	<p:else>
	<t:eventlink event="create">${message:create}</t:eventlink>
	</p:else>
	</t:if>

    <t:grid source="users" row="user" add="edit">
    	<p:editCell>
    	<t:eventlink event="edit" context="user.id">${message:edit}</t:eventlink>
    	</p:editCell>
    </t:grid>

    <p:sidebar>
        <t:UserMenu/>
    </p:sidebar>

</html>

