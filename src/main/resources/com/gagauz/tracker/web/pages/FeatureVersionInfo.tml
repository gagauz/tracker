<html t:type="layout" title="tracker Index"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <p>${task.name} / ${task.version.version}</p>
    <p>Owner: ${task.owner.name}</p>
    <p>Creator: ${task.creator.name}</p>
    <p>Description</p>
    <p>${task.description}</p>
    <br/>
    
    <p>Subtasks</p>
    <t:grid source="task.subtasks" row="subtask" add="edit">
    	<p:editCell>
    		<t:pagelink page="FeatureVersionInfo" context="subtask">View</t:pagelink>
    	</p:editCell>
    </t:grid>
    
    <p>Bugs</p>
    <t:grid source="task.bugs" row="bug" add="edit">
    	<p:editCell>
    		<t:pagelink page="FeatureVersionInfo" context="bug">View</t:pagelink>
    	</p:editCell>
    </t:grid>
    
    <p:sidebar>
    
    </p:sidebar>

</html>
