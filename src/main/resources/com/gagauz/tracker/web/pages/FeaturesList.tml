<html t:type="layout" title="ticket header info"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">

	<p:header>
		<ol class="breadcrumb">
			<li class="active">${message:all-features}</li>
			<li><t:pagelink t:page="ProjectInfo" t:context="project">${project.name}</t:pagelink></li>
		</ol>
	</p:header>
	
	<p:sidebar>
		<t:ProjectMenu project="project"/>
	</p:sidebar>

	<div class="panel-group">
		<t:foreach source="getFeatureVersionMap().entrySet()" value="entry">
			<div class="panel panel-info">
				<div class="panel-heading" id="heading_id_${entry.key.id}">
					<t:pagelink t:page="featureinfo" t:context="entry.key">#${entry.key.id} ${entry.key.name}</t:pagelink>
					<a role="button" data-toggle="collapse" href="#collapse_id_${entry.key.id}" aria-expanded="false" aria-controls="collapse_id_${entry.key.id}">
			          Expand
			        </a>
				</div>
				<div id="collapse_id_${entry.key.id}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading_id_${entry.key.id}">
					<div class="panel-body">
						<div>${entry.key.description}</div>
						<t:foreach source="entry.value.keySet()" value="version">
							<div class="block">
								<div class="title">${cond:version,prop:version.name,Unversioned}</div>
							</div>
						</t:foreach>
					</div>
				</div>
			</div>
		</t:foreach>
    </div>
</html>
