<html t:type="layout" title="${project.name}"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	<div>
		<t:if test="newFeature">
			<t:BeanEditForm t:id="featureForm" object="newFeature" exclude="id, created, updated"/>
			<p:else>
				<t:eventlink class="add button" t:event="createFeature">
					${message:create-feature} 
				</t:eventlink>
			</p:else>
		</t:if>
	</div>
	<div>
		<t:if test="newVersion">
			<t:BeanEditForm t:id="versionForm" object="newVersion" exclude="id, created, updated"/>
			<p:else>
				<t:eventlink class="add button" t:event="createVersion">
					${message:create-version} 
				</t:eventlink>
			</p:else>
		</t:if>
	
	</div>
	<hr/>
    
    
    <t:ProjectMap project="project"/>

	<p:sidebar>
        <t:ProjectMenu project="project"/>
    </p:sidebar>

</html>
