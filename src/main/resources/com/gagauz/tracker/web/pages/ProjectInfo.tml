<html t:type="layout" title="${project.name}"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	
	<h3>Project roles <t:pagelink page="rolegrouplist" context="[project,null]">Manage</t:pagelink></h3>
	<h4>Global</h4>
	<t:grid source="roleGroups" row="roleGroup" add="edit">
    	<p:editCell>
    		<t:pagelink page="rolegrouplist" context="[project, roleGroup]">edit</t:pagelink>
    	</p:editCell>
    </t:grid>
	
	<h4>This project only</h4>
	<t:grid source="roleGroups" row="roleGroup" add="edit">
    	<p:editCell>
    		<t:pagelink page="rolegrouplist" context="[project, roleGroup]">edit</t:pagelink>
    	</p:editCell>
    </t:grid>
	
	
    <t:grid source="roleGroups" row="roleGroup" add="edit">
    	<p:editCell>
    		<t:pagelink page="rolegrouplist" context="[project, roleGroup]">edit</t:pagelink>
    	</p:editCell>
    </t:grid>

	<hr/>

    <h3>Project versions <t:pagelink page="rolegrouplist" context="[project,null]">Manage</t:pagelink></h3>

	<t:eventlink t:event="createVersion">Create new version</t:eventlink>
	<div t:id="versionForm" project="project" version="newVersion" />

    <t:grid source="versions" row="version" add="tasks">
    	<p:tasksCell>
    		<t:pagelink page="tasklist" context="version">Tasks</t:pagelink>
    	</p:tasksCell>
    </t:grid>
    
    <hr/>
    
    <t:ProjectMap project="project"/>
    
