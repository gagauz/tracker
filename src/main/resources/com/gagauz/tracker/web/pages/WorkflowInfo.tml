<html t:type="layout" title="tracker Index"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

	<t:if test="editEntity">
	<h2>Project workflow</h2>
	<div>
		<t:beaneditform t:id="form" object="editEntity" exclude="id" add="project,allowFrom,allowTo">
			<p:project>
				<label for="project">${message:project}</label>
				<input type="text" readonly="true" value="${projectName}" />
			</p:project>
			<p:allowFrom>
				<t:label for="allowFrom"></t:label>
				<t:MultiSelect t:id="allowFrom" model="modelFrom" value="editEntity.allowedFrom" size="10" blankLabel="message:select"/>
			</p:allowFrom>
			
			<p:allowTo>
				<t:label for="allowTo"></t:label>
				<t:MultiSelect t:id="allowTo" model="modelTo" value="editEntity.allowedTo" size="10" blankLabel="message:select"/>
			</p:allowTo>
		
		</t:beaneditform>
		<t:eventlink t:event="reset">${message:reset}</t:eventlink>
	</div>
	<br/>
	<p:else>
		<t:eventlink class="add button" t:event="create" t:context="[project]">${message:create}</t:eventlink>
	</p:else>
	</t:if>

    <t:grid source="getEntities()" row="entityRow" add="edit">
    	<p:editCell>
    	<t:eventlink event="edit" context="[project, entityRow]">${message:edit}</t:eventlink>
    	</p:editCell>
    </t:grid>

    <p:sidebar>
    	<t:if test="project">
        <t:ProjectMenu/>
        </t:if>
    </p:sidebar>

</html>